   "source": [
    "# Python implementation of the approach\n",
    "\n",
    "# Recursive Function\n",
    "# global variables p and f\n",
    "p = 1.0\n",
    "f = 1.0\n",
    "\n",
    "\n",
    "def e(x, n):\n",
    "\n",
    "\tglobal p, f\n",
    "\n",
    "\t# Termination condition\n",
    "\tif (n == 0):\n",
    "\t\treturn 1\n",
    "\n",
    "\t# Recursive call\n",
    "\tr = e(x, n - 1)\n",
    "\n",
    "\t# Update the power of x\n",
    "\tp = p * x\n",
    "\n",
    "\t# Factorial\n",
    "\tf = f * n\n",
    "\n",
    "\treturn (r + p / f)\n",
    "\n",
    "# Driver code\n",
    "\n",
    "\n",
    "x = 1.0\n",
    "n = 10\n",
    "print(e(x, n))\n",
    "\n",
    "# This contributed by ihritik\n"
   ]
